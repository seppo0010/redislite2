#!/usr/bin/env python
#
# http://tech.myemma.com/python-pep8-git-hooks/
# Copy of symlink this file into .git/hooks/
from __future__ import with_statement
import os
import shutil
import subprocess
import sys
import tempfile


def system(*args, **kwargs):
    kwargs.setdefault('stdout', subprocess.PIPE)
    proc = subprocess.Popen(args, **kwargs)
    out, err = proc.communicate()
    return out


def check_flake8(out=sys.stderr):
    # When git executes, the current path is always the project root.
    flake8 = os.path.abspath('.REDISLITE2/bin/flake8')
    if not os.path.exists(flake8):
        print 'Can\'t find flake8 at .REDISLITE2/bin/flake8.  Run "./bin/rl2-run".'
        sys.exit(1)

    files = (f for f in system('git', 'diff', '--name-only', '--staged', '--diff-filter=AM').splitlines() if f.endswith('.py'))

    tempdir = tempfile.mkdtemp()
    for name in files:
        filename = os.path.join(tempdir, name)
        filepath = os.path.dirname(filename)
        if not os.path.exists(filepath):
            os.makedirs(filepath)
        with file(filename, 'w') as f:
            system('git', 'show', ':' + name, stdout=f)
    output = system(flake8, '--ignore=E501', '.', cwd=tempdir)
    shutil.rmtree(tempdir)
    if output:
        out.write(output),
        sys.exit(1)

def main():
    check_flake8()


if __name__ == '__main__':
    main()
